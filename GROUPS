#include <iostream>
#include<bits/stdc++.h>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	
	while(t--)
	{
	    string s;
	    cin>>s;
	    
	    int res=0;
	    int i=0;
	    
	    while(i<s.size()){
	        if(s[i]=='1'){
	            res++;
	            while(i<s.size() && s[i]=='1')
	                i++;    
	        }
	        else
	            i++ ;
	    }
	    
	    cout<<res<<endl;
	    
	}
	return 0;
}

